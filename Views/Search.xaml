<Page
    xmlns:controls="clr-namespace:Microsoft.UI.Xaml.Controls;assembly=Microsoft.WinUI"
    x:Class="FluentDL.Views.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:services="using:FluentDL.Services"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    >

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
        
        <TextBox x:Name="artistNameInput"
                     Header="Enter an artist name:" PlaceholderText="Artist Name"
                     Width="300" HorizontalAlignment="Left"/>
        <TextBox x:Name="trackNameInput"
                        Header="Enter a track name:" PlaceholderText="Track Name"
                        Width="300" HorizontalAlignment="Left"/>
        <Button
            x:Name="testButton"
            Content="Search"
            Click="Button_Click"
            />
        <ProgressBar x:Name="SearchProgress" Width="534" IsIndeterminate="False" ShowPaused="False" ShowError="False" Value="100"/>
        <ListView x:Name="CustomListView"
             Height="350"
             Width="550"
             CornerRadius="8"
             BorderThickness="2"
             SelectionChanged="CustomListView_OnSelectionChanged"
             BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="services:SongSearchObject">
                    <Grid Margin="0,12,0,12" AutomationProperties.Name="{x:Bind Title}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="{x:Bind ImageLocation}" MaxHeight="100" Stretch="Fill"/>

                        <StackPanel Margin="20,0,0,0" Grid.Column="1">
                            <TextBlock Text="{x:Bind Title}" FontSize="15" FontWeight="SemiBold" FontFamily="Segoe UI Variable Display" Style="{ThemeResource BaseTextBlockStyle}" HorizontalAlignment="Left" Margin="0,0,0,0" LineHeight="20"/>
                            <TextBlock Text="{x:Bind Artists}" FontSize="14" FontFamily="Segoe UI Variable Display" FontWeight="Normal" Style="{ThemeResource BodyTextBlockStyle}" TextTrimming="CharacterEllipsis" Width="350" MaxLines="1" Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="18,0,0,0" Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Column="1">
                            <TextBlock Text="{x:Bind ReleaseDate}" HorizontalAlignment="Left" Style="{ThemeResource CaptionTextBlockStyle}" Margin="5,0,0,0" FontSize="14" FontFamily="Segoe UI Variable Display"/>
                            <TextBlock Text="  &#x2022; " Style="{ThemeResource CaptionTextBlockStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Text="{x:Bind Duration}" HorizontalAlignment="Left" Style="{ThemeResource CaptionTextBlockStyle}" Margin="5,0,0,0" FontSize="14" FontFamily="Segoe UI Variable Display"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>

</Page>
