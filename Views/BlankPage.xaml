<Page
    xmlns:controls="clr-namespace:Microsoft.UI.Xaml.Controls;assembly=Microsoft.WinUI"
    x:Class="FluentDL.Views.BlankPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    >

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBox x:Name="artistNameInput"
                     Header="Enter an artist name:" PlaceholderText="Artist Name"
                     Width="300" HorizontalAlignment="Left"/>
        <TextBox x:Name="trackNameInput"
                        Header="Enter a track name:" PlaceholderText="Track Name"
                        Width="300" HorizontalAlignment="Left"/>
        <Button
            x:Name="testButton"
            Content="Test"
            Click="Button_Click" />
        <TextBlock
            x:Name="testTextBlock"
            Text="testing text"
            FontSize="12"
            Margin="0,20,0,0" />

        
    </StackPanel>

</Page>
